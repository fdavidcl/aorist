%h1
  = render partial: "common/back", locals: {path: medio_contratos_path}
  Contrato #{@contrato.id}

%h4 Datos
%p
  Descripción:
  = @contrato.descripcion

%p
  Fecha de inicio:
  = @contrato.fecha

%p
  Fecha de fin:
  = @contrato.duracion

%p
  Importe:
  = @contrato.importe

%h4 Realizar un pago
= form_for [@medio, @contrato, @pago], url: medio_contrato_pagos_path(contrato_id: @contrato.id), method: :post do |f|
  = f.label :importe, "Importe"
  = f.number_field :importe, min: 0, value: 0
  = f.date_select :fecha
  = f.submit "Realizar pago"

%h4 Pagos realizados
.cards
  - @contrato.pagos.each do |p|
    .card
      %strong.in-red #{p.importe} €
      %span.count= p.fecha
